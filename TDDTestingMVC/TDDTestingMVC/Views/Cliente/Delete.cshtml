@model TDDTestingMVC.Data.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Cliente</h2>

<p>¿Estás seguro de que deseas eliminar al cliente <strong>@Model.Nombres @Model.Apellidos</strong>?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Codigo" />

    <button type="submit" id="btnSubmit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
