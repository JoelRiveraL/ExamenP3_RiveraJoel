@model TDDTestingMVC.Data.Pedido

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<h1>Eliminar Pedido</h1>
<h3>¿Estás seguro de que deseas eliminar este pedido?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.PedidoID</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.ClienteID</dd>

        <dt class="col-sm-2">Fecha del Pedido</dt>
        <dd class="col-sm-10">@Model.FechaPedido.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">$@Model.Monto</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.PedidoID" method="post">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
